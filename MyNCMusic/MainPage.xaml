<Page
    x:Class="MyNCMusic.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:converter="using:MyNCMusic.Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyNCMusic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:MyNCMusic.Models"
    xmlns:views="using:MyNCMusic.Views"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:GetDt_S x:Key="GetDt_S" />
        <converter:ReturnInByDouble x:Key="ReturnInByDouble" />
        <converter:GetFavoriteIconVisibility x:Key="GetFavoriteIconVisibility" />
        <converter:GetPlayingIconVisibility x:Key="GetPlayingIconVisibility" />
        <converter:ChangeVolumeType x:Key="ChangeVolumeType" />
    </Page.Resources>

    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="0,-1,0,0">
            <Grid Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <Frame x:Name="Frame_all" />
                <Grid
                    x:Name="Grid_playBar"
                    Grid.Row="1"
                    Background="Transparent">
                    <Grid>
                        <Grid.Background>
                            <AcrylicBrush
                                BackgroundSource="Backdrop"
                                TintColor="Black"
                                TintOpacity="0.4" />
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="Button_playInfo"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Button_playInfo_Click">
                            <Button.Content>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Name="Image_playingAlbum"
                                            Width="60"
                                            Height="60" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Width="400"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                Name="TextBlcok_musicName"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="" />
                                            <TextBlock
                                                Name="TextBlcok_artistName"
                                                Margin="0,2"
                                                FontSize="13"
                                                Foreground="White"
                                                Text="" />
                                            <TextBlock
                                                Name="TextBlcok_albumName"
                                                FontSize="13"
                                                Foreground="White"
                                                Text=""
                                                Visibility="Visible" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Button.Content>
                        </Button>
                        <!--<TextBlock Text="{x:Bind _mediaPlayer.PlaybackSession.Position.Seconds,Mode=OneTime}" Grid.Column="1" VerticalAlignment="Bottom"/>-->
                        <Grid Grid.Column="1" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Name="TextBlock_currentTime"
                                Margin="10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="0.00" />
                            <Slider
                                x:Name="Slider_play"
                                Grid.Column="1"
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                Foreground="White"
                                Maximum="5"
                                ThumbToolTipValueConverter="{StaticResource GetDt_S}"
                                ValueChanged="Slider_play_ValueChanged"
                                Value="0" />
                            <TextBlock
                                Name="TextBlock_lengthTime"
                                Grid.Column="2"
                                Margin="10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="0.00" />
                        </Grid>
                        <StackPanel
                            Grid.Column="2"
                            Margin="0,0,10,0"
                            Orientation="Horizontal">
                            <Button
                                Name="Button_isOrNotFavorite"
                                VerticalAlignment="Center"
                                Click="Button_isOrNotFavorite_Click"
                                Style="{StaticResource ButtonStyle_tran}">
                                <TextBlock
                                    Name="TextBlock_isOrnotFavorite"
                                    Width="14"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe UI Symbol"
                                    Foreground="{x:Bind local:MainPage.mainSolidColorBrush}"
                                    Text="&#xE006;"
                                    Visibility="Visible" />
                                <!--<TextBlock Text="&#xE00B;" FontFamily="Segoe UI Symbol" Foreground="{x:Bind local:MainPage.mainSolidColorBrush}"
                                            Name="TextBlock_isFavorite"
                                               Visibility="Collapsed"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>-->
                            </Button>
                            <Button
                                x:Name="Button_previous"
                                Click="Button_previous_Click"
                                Foreground="White"
                                Style="{StaticResource ButtonStyle_tran}">
                                <Button.Content>
                                    <SymbolIcon Symbol="Previous" />
                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="Button_stopOrPlay"
                                Click="Button_stopOrPlay_Click"
                                Foreground="White"
                                Style="{StaticResource ButtonStyle_tran}">
                                <Button.Content>
                                    <SymbolIcon x:Name="SymbolIcon_stopOrPlay" Symbol="Play" />
                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="Button_next"
                                Click="Button_next_Click"
                                Foreground="White"
                                Style="{StaticResource ButtonStyle_tran}">
                                <Button.Content>
                                    <SymbolIcon Symbol="Next" />
                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="Button_playOrderState"
                                Click="Button_playOrderState_Click"
                                Foreground="White"
                                Style="{StaticResource ButtonStyle_tran}">
                                <Button.Content>
                                    <SymbolIcon x:Name="SymbolIcon_playOrderState" Symbol="AlignLeft" />
                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="Button_Volume"
                                Foreground="White"
                                PointerWheelChanged="Slider_Volume_PointerWheelChanged"
                                Style="{StaticResource ButtonStyle_tran}">
                                <Button.Content>
                                    <SymbolIcon Symbol="Volume" />
                                </Button.Content>
                                <Button.Flyout>
                                    <Flyout FlyoutPresenterStyle="{StaticResource FlyoutFlyoutPresenterStyle1}">
                                        <Slider
                                            x:Name="Slider_Volume"
                                            Height="120"
                                            Padding="4,10"
                                            CanBeScrollAnchor="True"
                                            Maximum="100"
                                            Minimum="0"
                                            Orientation="Vertical"
                                            PointerWheelChanged="Slider_Volume_PointerWheelChanged"
                                            Value="{x:Bind _mediaPlayer.Volume, Mode=TwoWay, Converter={StaticResource ChangeVolumeType}}" />
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                            <Button
                                x:Name="Button_playList"
                                Click="Button_playList_Click"
                                Foreground="White"
                                Style="{StaticResource ButtonStyle_tran}">
                                <Button.Content>
                                    <SymbolIcon Symbol="List" />
                                </Button.Content>
                                <Button.Flyout>
                                    <Flyout>
                                        <ListBox
                                            x:Name="ListBox_playList"
                                            Width="300"
                                            MaxHeight="400"
                                            Background="{ThemeResource SystemControlAcrylicElementBrush}"
                                            DoubleTapped="ListBox_DoubleTapped"
                                            ItemContainerStyle="{StaticResource ListBoxItemStyle1}"
                                            ItemsSource="{x:Bind playingListBaseObjects}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate x:DataType="model:PlayingSongBaseObject">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontFamily="Segoe UI Symbol"
                                                            Foreground="{StaticResource SystemAccentColorLight1}"
                                                            Text="&#xE189;"
                                                            ToolTipService.ToolTip="正在播放此歌曲"
                                                            Visibility="{x:Bind IsPlaying, Converter={StaticResource GetPlayingIconVisibility}}">
                                                            <!--<TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="{x:Bind isPlaying,Converter={StaticResource GetPlayingIconVisibility}}"/>
                                                            </Style>
                                                        </TextBlock.Style>-->
                                                        </TextBlock>
                                                        <TextBlock Margin="4,0,0,0" Text="{x:Bind Name}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
            <Frame x:Name="MainFrame" />
        </Grid>
        <Grid
            Name="MyTitleBar"
            Grid.Row="0"
            Background="Transparent" />
    </Grid>

</Page>
