<ContentDialog
    x:Class="MyNCMusic.ContentDialogs.NewPlaylist"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyNCMusic.ContentDialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="新建歌单"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="创建"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="取消"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            Margin="0,10"
            FontSize="16"
            Text="新建歌单" />
        <TextBox
            x:Name="TextBox_PlaylistName"
            Margin="0,10"
            BorderThickness="0,0,0,1"
            PlaceholderText="歌单标题"
            TextChanging="TextBox_PlaylistName_TextChanging" />
        <CheckBox x:Name="CheckBox_Privacy" Content="设置为隐私歌单" />
    </StackPanel>
</ContentDialog>
