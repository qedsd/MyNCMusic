                                </ScrollViewer>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    <Button x:Name="Button_playAll" Style="{StaticResource ButtonStyle_tran}" Foreground="White"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                        Grid.Row="2"
