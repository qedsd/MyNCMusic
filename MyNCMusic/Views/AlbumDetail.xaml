                                <TextBlock Text="&#xE102;" FontFamily="Segoe MDL2 Assets" FontSize="13" VerticalAlignment="Center"/>
                                <TextBlock Text="播放全部"  FontSize="13" Margin="10,0,0,0"/>
                                <TextBlock Text="("  Margin="0,0,0,0"/>
                                <TextBlock Text=""  Margin="0,0,0,0" Name="TextBlock_songsCount"/>
                                <TextBlock Text=")"  Margin="0,0,0,0"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>-->

            </Grid>
        </Grid>
        <ListBox
            Name="ListBox_musicDetail"
            Grid.Row="3"
            Margin="0,4"
            DoubleTapped="ListBox_musicDetail_DoubleTapped"
            IsDoubleTapEnabled="True">
            <ListBox.Background>
                <AcrylicBrush
                    BackgroundSource="Backdrop"
                    TintColor="Black"
                    TintOpacity="0.1" />
            </ListBox.Background>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <!--<Setter Property="Padding" Value="0"></Setter>-->
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="model:MusicItem">
                    <Grid x:Name="Grid_itemTemplate">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="32" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Symbol"
                            Foreground="PaleVioletRed"
                            Text="&#x2764;"
                            Visibility="{Binding isFavorite, Converter={StaticResource GetFavoriteIconVisibility}}" />
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="LightGray"
                                Text="{x:Bind Alia, Converter={StaticResource GetAlia}}" />
                        </StackPanel>
                        <Button
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Click="Button_artists_Click"
                            Content="{x:Bind Ar, Converter={StaticResource GetArNames}}"
                            Style="{StaticResource ButtonStyle_tran}">
                            <Button.Flyout>
                                <Flyout>
                                    <ListBox
                                        x:Name="ListBox_artists"
                                        ItemsSource="{x:Bind Ar}"
                                        SelectionChanged="ListBox_artists_SelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate x:DataType="model:Artist">
                                                <TextBlock Text="{x:Bind Name}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Grid.Column="3"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Content="{x:Bind Al.Name}"
                            Style="{StaticResource ButtonStyle_tran}" />
                        <TextBlock
                            Grid.Column="4"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            Text="{x:Bind Dt, Converter={StaticResource GetDt}}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
